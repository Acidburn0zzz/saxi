{
  "name": "saxi",
  "version": "0.2.6",
  "description": "Drive the AxiDraw pen plotter",
  "homepage": "https://github.com/nornagon/saxi",
  "repository": "github:nornagon/saxi",
  "keywords": [
    "axidraw",
    "plotter",
    "pen plotter",
    "eggbot",
    "serial",
    "hardware",
    "robot"
  ],
  "bugs": {
    "url": "https://github.com/nornagon/saxi/issues"
  },
  "main": "index.js",
  "bin": {
    "saxi": "index.js"
  },
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix -t verbose",
    "build": "tsc && webpack --mode=production",
    "prepare": "npm run build",
    "prestart": "npm run build",
    "start": "node .",
    "dev": "tsc && webpack --mode=development -w & node .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Jeremy Apthorp <nornagon@nornagon.net>",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@rehooks/component-size": "^1.0.2",
    "@types/express": "^4.16.1",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.20",
    "@types/react-dom": "^16.0.11",
    "@types/serialport": "^7.0.1",
    "@types/ws": "^6.0.1",
    "@types/yargs": "^12.0.8",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "css-loader": "^2.1.0",
    "eslint": "^5.12.0",
    "eslint-plugin-react": "^7.12.4",
    "react": "^16.8.0-alpha.1",
    "react-dom": "^16.8.0-alpha.1",
    "semver": "^5.6.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev": "^1.1.1"
  },
  "dependencies": {
    "express": "^4.16.4",
    "serialport": "^7.1.3",
    "ws": "^6.1.3",
    "yargs": "^12.0.5"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage"
        }
      ],
      "@babel/preset-react"
    ]
  },
  "pkg": {
    "scripts": [
      "dist/server/*.js"
    ],
    "assets": [
      "static/**/*",
      "dist/ui/*.js"
    ],
    "targets": [
      "node10"
    ]
  },
  "files": [
    "/dist",
    "/static"
  ]
}
